{
  "name": "llm-manager",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Ettore Marangon",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --env-file .env src/server.ts",
    "dev:debug": "cross-env NODE_ENV=development tsx watch --inspect --env-file .env.development src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "vercel-build": "npm run build",
    "start": "cross-env NODE_ENV=production node --enable-source-maps dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint",
    "test": "node --test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "morgan": "^1.10.0",
    "ollama": "^0.5.14",
    "openai": "^5.12.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.5",
    "cross-env": "^10.0.0",
    "eslint": "^9.38.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
